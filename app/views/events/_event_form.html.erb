<div class="event_form">
    <%= form_with model: @event do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div>
        <%= f.label :private %>
        <%= f.check_box :private %>
    </div>
    <%= f.submit%>
    <% end %>
</div>